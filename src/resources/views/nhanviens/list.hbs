{{> header}}
<div class="mt-4 container-lg ">
  {{!-- <a class="btn btn-primary" href="/nhanvien/create" role="button"><strong>Thêm nhân viên</strong></a> --}}
  {{!-- Search --}}
  <div class="d-flex justify-content-center mt-2">
    <h1 class="font-weight-bold">Danh sách nhân viên</h1>
  </div>

  <form action="/nhanvien/searchpost" method="post" class=" d-flex justify-content-center mt-5">
    <div class="input-group">
      <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
        aria-describedby="search-addon" id="ho_ten" name="ho_ten" />
      <button type="submit" class="btn btn-outline-primary">search</button>
    </div>
  </form>
  
    <h4>Tổng số: {{totalItems}}</h4>
  <div class="row mt-4 justify-content-center">

    <table class="table">
      {{!-- Title --}}
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Họ và tên</th>
          <th scope="col">Chức danh</th>
          <th scope="col">Phòng</th>
          {{!-- <th scope="col">Chi nhánh</th> --}}
          
          <th scope="col">Thao tác</th>
        </tr>
      </thead>
      {{!-- Body --}}
      <tbody class="fade-in-component">
        {{#each nhanviens as |nhanvien|}}
        <tr>
          {{!-- <th scope="row">1</th> --}}
          <td>{{nhanvien._id}}</td>
          <td>{{nhanvien.ho_ten}}</td>
          {{!-- {{#with nhanvien.dia_chi}}
          <td>{{khom_ap}}</td>
          {{/with}} --}}
          <td>{{nhanvien.chuc_danh}}</td>
          <td>{{nhanvien.bo_phan_cong_tac.phong}}</td>
          
          {{!-- <td>{{nhanvien.bo_phan_cong_tac.chi_nhanh}}</td> --}}
          <td>
            <a class="btn btn-outline-primary" href="/nhanvien/{{nhanvien._id}}" role="button">Xem chi tiết</a>

            {{!-- <a href="/nhanvien/{{this._id}}" class="btn btn-link">Xem chi tiết</a> --}}
            {{!-- <a href="#" class="btn btn-link" data-bs-toggle="modal" data-bs-taget="#delete-course-modal"
              data-id="{{this._id}}">Xóa</a> --}}
            <a href="#" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#delete-course-modal"
              data-id="{{nhanvien._id}}">Xóa</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <nav aria-label="...">
      <ul class="pagination d-flex justify-content-center ">

        {{#if (equalOr currentPage '1' '')}} <li class="page-item disabled"><span class="page-link">Previous</span>
        </li>
        {{else}}
        <li class="page-item">
          <a class="page-link" href="?page={{previousPage}}">Previous</a>
        </li>
        {{/if}}

        {{#times totalPages}}
        <li class="page-item {{#if (equal @index previousPage)}} active {{else}} {{/if}}">
          <a class="page-link " href="?page={{sum @index 1}}">{{sum @index 1}}</a>
          {{!-- <a class="page-link " href=".">{{sum @index 1}}</a> --}}
          {{!-- <a class="page-link " href="?page={{sum @index 1}}">{{sum @index 1}}</a> --}}

        </li>
        {{/times}}
        {{#if (equal currentPage lastPage)}}<li class="page-item disabled"><span class="page-link">Next Page</span>
        </li>
        {{else}}

        <li class="page-item">
          <a class="page-link" href="?page={{nextPage}}">Next Page</a>
        </li>
        {{/if}}
        {{!-- <h1>{{url}}</h1> --}}
      </ul>
    </nav>
  </div>
  {{!-- <a class="btn btn-primary" href="/nhanvien/dangvien" role="button"><strong>Danh sách nhân viên là Đảng
      viên</strong></a> <br>
  <a class="btn btn-primary mt-2" href="/nhanvien/notdangvien" role="button"><strong>Danh sách nhân viên chưa kết nạp
      Đảng</strong></a> --}}
</div>

{{!-- Delete component --}}
{{>deleteModal}}
{{!-- {{> footer}} --}}
<div class="container bottom-0 end-0 p-5">
  <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top footer-position">
    <p class="col-md-4 mb-0 text-muted">© 2021 Company, Inc</p>

    <a href="/"
      class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
      <svg class="bi me-2" width="40" height="32">
        <use xlink:href="#bootstrap"></use>
      </svg>
    </a>

    <ul class="nav col-md-4 justify-content-end">
      <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
      <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
      <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Pricing</a></li>
      <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
      <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
    </ul>
  </footer>
</div>
</div>
